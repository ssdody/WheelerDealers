@model Dealership.Web.Models.CarViewModels.CarSummaryViewModel

<section>
    <div class="panelPadding">
        <a asp-controller="Car" asp-action="Details" asp-route-id="@Model.Id" class="list-group-item">

            <div class="well">@Model.Brand @Model.CarModel</div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-lg-4 img-responsive">
                        <img class="img-responsive img-rounded" src="~/images/cars/@(Model.ImageUrl ?? "default.jpg")" alt="Not Found." />
                    </div>

                    <div class="col-lg-offset-1 col-lg-6">

                        <div class="row">
                            <label class="col-lg-6 control-label">Capacity</label>
                            <div class="col-lg-6">
                                <div class="pull-right">
                                    <label>@Model.Capacity</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label class="col-lg-6 control-label">Gears</label>
                            <div class="col-lg-6">
                                <div class="pull-right">
                                    <label>@Model.GearType</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label class="col-lg-6 control-label">Fuel</label>
                            <div class="col-lg-6">
                                <div class="pull-right">
                                    <label>@Model.Fuel</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label class="col-lg-6 control-label">Capacity</label>
                            <div class="col-lg-6">
                                <div class="pull-right">
                                    <label>@Model.Capacity</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label class="col-lg-6 control-label">Price</label>
                            <div class="col-lg-6">
                                <div class="pull-right">
                                    <label>@Model.Price</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <label class="col-lg-6 control-label">Mileage</label>
                            <div class="col-lg-6">
                                <div class="pull-right">
                                    <label>@Model.Mileage</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</section>