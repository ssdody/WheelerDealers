@model EditCarViewModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<hr />
<div>
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="Edit" method="post" enctype="multipart/form-data">
            <partial name="_EditCarPartial" model="@Model" />
            <div class="form-group">
                <input type="submit" name="save" value="Save" class="btn btn-warning" />
                <a asp-controller="Car" asp-action="Details" asp-route-id="@Model.Car.Id" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>
<div class="col-lg-12">
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/createcar.js"></script>
}